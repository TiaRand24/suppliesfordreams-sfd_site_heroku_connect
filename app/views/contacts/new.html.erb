<% provide(:title, "Contact Us") %>
<section id="contacts-content">
  <div class="container py-6">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-12">
        <h1 class="text-center">Contact Us</h1>
        <%= form_for @contact do |f| %>
        <div class="form-group">
          <% if flash[:error].present? %>
          <p> flash[:error]</p>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :name %> <br>
          <%= f.text_field :name, class: "form-control form-control-lg", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :email %> <br>
          <%= f.text_field :email, class: "form-control form-control-lg", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :message %> <br>
          <%= f.text_area :message, class: "form-control form-control-lg", as: :text %>
        </div>
        <div class="form-group contact-hidden">
          <%= f.label :nickname %> <br>
          <%= f.text_field :nickname, hint: 'leave this field blank' %>
        </div>
        <%= f.submit 'Send Message', class: "btn btn-primary btn-blue" %>
        <% end %>
      </div>
    </div>
  </div>
</section>