<div class="card">
  <!-- Featured image -->
  <%= image_tag(post.featured_image, style: "width: 100%;") if post.featured_image %>
  <div class="card-body">
    <h5 class="card-title"><%= link_to post.title, buttercms_post_path(post.slug), :title => post.title %></h5>
    <p class="card-text">by <%= link_to "#{post.author.first_name} #{post.author.last_name}", buttercms_author_path(post.author.slug) %></p>
    <p><%= post.summary %></p>
  </div>
</div>
